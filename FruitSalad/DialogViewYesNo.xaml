<UserControl x:Class="FruitSalad.DialogViewYesNo"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:FruitSalad"
             mc:Ignorable="d" 
             Height="auto" Width="auto" MaxWidth="400">
    <StackPanel>
        <TextBlock Text="{Binding Message}" HorizontalAlignment="Center" VerticalAlignment="Center" TextWrapping="Wrap" Margin="20 20 20 20"/>
        <StackPanel HorizontalAlignment="Center" Orientation="Horizontal">
            <Button Content="Yes" Width="120" Height="30" Margin="4 4 4 4" Command="{Binding YesCommand}" CommandParameter="{Binding RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=Window}}"/>
            <Button Content="No"  Width="120" Height="30" Margin="4 4 4 4" Command="{Binding NoCommand}" CommandParameter="{Binding RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=Window}}"/>
        </StackPanel>
    </StackPanel>
</UserControl>
